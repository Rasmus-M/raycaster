       mov  @sprite_type_props(r2),r2
       coc  @sprite_can_be_collected,r2
       jne  sprite_collisions_2
       mov  @sprite_x(r4),r2
       s    r0,r2
       abs  r2
       ci   r2,>0080
       jgt  sprite_collisions_2
       mov  @sprite_y(r4),r3
       s    r1,r3
       abs  r3
       ci   r3,>0080
       jgt  sprite_collisions_2
       bl   @collect_sprite
       jmp  sprite_collisions_3
sprite_collisions_2:
       ai   r4,sprite_size
